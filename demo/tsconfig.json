{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "resolveJsonModule": true,
        "noEmit": true,
        "jsx": "preserve",
        "inlineSourceMap": true,
        "inlineSources": true
    },
    "include": [
        "src"
    ]
}